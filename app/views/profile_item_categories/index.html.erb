<p id="notice"><%= notice %></p>

<h1>Profile Item Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_item_categories.each do |profile_item_category| %>
      <tr>
        <td><%= profile_item_category.title %></td>
        <td><%= profile_item_category.description %></td>
        <td><%= link_to 'Show', profile_item_category %></td>
        <td><%= link_to 'Edit', edit_profile_item_category_path(profile_item_category) %></td>
        <td><%= link_to 'Destroy', profile_item_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

